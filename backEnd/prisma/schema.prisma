generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// tabelas

model boloCaseiro {
  id              Int       @id @default(autoincrement())
  nome            String    @unique
  descricao       String    @db.Text
  precoUnitario   Decimal   @db.Decimal(10, 2)
  disponivel      Boolean   @default(true)    
  
  imagemUrl       String?


  criadoEm        DateTime  @default(now())
  atualizadoEm    DateTime  @updatedAt

  @@map("bolos_caseiros")
}

model doces {
  id              Int       @id @default(autoincrement())
  nome            String    @unique
  descricao       String    @db.Text
  precoUnitario   Decimal   @db.Decimal(10, 2)
   
  
  imagemUrl       String?


  criadoEm        DateTime  @default(now())
  atualizadoEm    DateTime  @updatedAt

  @@map("doces")
}

model recheados {
  id              Int       @id @default(autoincrement())
  nome            String    @unique
  descricao       String    @db.Text
  precoKg         Decimal   @db.Decimal(10, 2)   
  
  imagemUrl       String?


  criadoEm        DateTime  @default(now())
  atualizadoEm    DateTime  @updatedAt

  @@map("recheados")
}

model sobremesas {
  id              Int       @id @default(autoincrement())
  nome            String    @unique
  descricao       String    @db.Text
  precoUnitario   Decimal   @db.Decimal(10, 2)
  disponivel      Boolean   @default(true)  
  
  imagemUrl       String?


  criadoEm        DateTime  @default(now())
  atualizadoEm    DateTime  @updatedAt

  @@map("sobremesas")
}